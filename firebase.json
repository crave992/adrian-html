{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9000
    },
    "firestore": {
      "port": 8000
    },
    "hosting": {
      "port": 5000
    },
    "pubsub": {
      "port": 8081
    },
    "storage": {
      "port": 9001
    },
    "ui": {
      "enabled": true,
      "port": 8010
    }
  }
}
